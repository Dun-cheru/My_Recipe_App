<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:layout_height="match_parent"
    tools:context=".Sign_Up">

    <EditText
        android:id="@+id/fullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="full name"
        android:textSize="20sp"
        android:drawableStart="@drawable/ic_login_person"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="15dp"
        android:hint="dun@gmail.com"
        android:textSize="20sp"
        android:drawableStart="@drawable/ic_sign_up_email"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="15dp"
        android:hint="password"
        android:drawableStart="@drawable/ic_password_login"
        android:textSize="20sp"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/confirmPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="15dp"
        android:hint="confirm password"
        android:drawableStart="@drawable/ic_password_login"
        android:textSize="20sp"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/phoneNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:drawableStart="@drawable/ic_sign_up_phone"
        android:hint="+254 XXX XXX XXX"
        android:inputType="phone"/>

    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Register_button"
        android:textSize="20sp"
        android:background="@drawable/round_button"/>


</LinearLayout>